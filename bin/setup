#!/usr/bin/env ruby

def system!(*args)
  log "Executing #{args}"
  if system(*args)
    log "#{args} succeeded"
  else
    log "#{args} failed"
    abort
  end
end

def log(message)
  puts "[bin/setup] #{message}"
end

def setup
  log "Gemのインストール"
  system! "bundle check || bundle install"

  log "開発環境のDBをリセット"
  system! "bin/rails db:reset || bin/rails db:migrate"

  log "テスト環境のDBをリセット"
  system!({ "RAILS_ENV" => "test" }, "bin/rails db:reset")

  log "All set up."
end

def help
  log(<<-"EOS")
  Useful commands:
  --------------------------------------------------------------
  bin/run・・・run app localy
  --------------------------------------------------------------
  bin/ci・・・runs all tests and checks as CI would
  --------------------------------------------------------------
  bin/rails test・・・run non-system tests
  --------------------------------------------------------------
  bin/rails test:system・・・run system tests
  --------------------------------------------------------------
  bin/setup help・・・show this help
  --------------------------------------------------------------
  EOS
end

def call
  return help if ARGV[0] == "help"
  return setup if ARGV[0] == nil
  puts "'#{ARGV[0]}' command does not exist. See 'bin/setup help'."
end

call


